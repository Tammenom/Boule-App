<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.GameOverviewActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipChildren="false"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/exitGameOverview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:onClick="ExitGameButtonClicked"
            android:text="Exit Game" />

        <TextView
            android:id="@+id/TeamsHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25px"
            android:layout_marginBottom="15px"
            android:layout_weight="0"
            android:background="#FAF7F7"
            android:text="PLAYERS"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Team1Heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FA3F3F"
                    android:text="Team 1"
                    android:textAlignment="center"
                    android:textColor="#FFFEFE"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Team1PlayerList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF7979"
                    android:textAlignment="center"
                    android:textColor="#FAF6F6"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Team2Heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2C58DD"
                    android:text="Team 2"
                    android:textAlignment="center"
                    android:textColor="#FDFCFC"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Team2PlayerList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#6B89E4"
                    android:textAlignment="center"
                    android:textColor="#FDFBFB"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_weight="0"
            android:text="SCORE TOTAL"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Team1PointsTotalHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FA3F3F"
                    android:text="Team 1\nScore"
                    android:textAlignment="center"
                    android:textColor="#FBF9F9"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Team1TotalPointsView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF7979"
                    android:paddingTop="20px"
                    android:paddingBottom="20px"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#FAF6F6"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/RoundsTotalHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#5A5959"
                    android:text="Rounds\n(Total)"
                    android:textAlignment="center"
                    android:textColor="#F8F5F5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/TotalRoundCountView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#8F8E8E"
                    android:paddingTop="20px"
                    android:paddingBottom="20px"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="#FBF8F8"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Team2PointsTotalHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2C58DD"
                    android:text="Team 2\nScore"
                    android:textAlignment="center"
                    android:textColor="#FDFCFC"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Team2TotalPointsView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#6B89E4"
                    android:paddingTop="20px"
                    android:paddingBottom="20px"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#FAF7F7"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_weight="0"
            android:text="ROUND SCORE"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="3"
            android:gravity="center|top"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FA3F3F"
                    android:text="Team 1"
                    android:textAlignment="center"
                    android:textColor="#F8F4F4"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Team1PointsListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FF7979"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#FAFAFA"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#5A5959"
                    android:text="Round"
                    android:textAlignment="center"
                    android:textColor="#F8F5F5"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/RoundCountListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#8F8E8E"
                    android:text="1"
                    android:textAlignment="center"
                    android:textColor="#FDFCFC"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#2C58DD"
                    android:text="Team 2"
                    android:textAlignment="center"
                    android:textColor="#FDFCFC"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Team2PointsListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#6B89E4"
                    android:text="0"
                    android:textAlignment="center"
                    android:textColor="#F8F7F7"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/nextRoundButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="NextRoundButtonClicked"
            android:text="CLICK TO START A NEW ROUND" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>